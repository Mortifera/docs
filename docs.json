{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "palm",
  "name": "EdgeBlog",
  "colors": {
    "primary": "#004537",
    "light": "#A5C2B9",
    "dark": "#006B54"
  },
  "appearance": {
    "default": "system"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "dark": "#151515"
    }
  },
  "fonts": {
    "family": "Inter",
    "heading": {
      "family": "Hedvig Letters Serif",
      "weight": 500
    }
  },
  "search": {
    "prompt": "Search docs..."
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "how-it-works"]
          },
          {
            "group": "Setting Up Your Blog",
            "pages": ["setup/adding-a-site", "setup/cdn-routing", "setup/blog-widget"]
          },
          {
            "group": "Content",
            "pages": ["content/generating-articles", "content/managing-articles", "content/content-strategy", "content/early-access-features"]
          },
          {
            "group": "Customization",
            "pages": ["customization/templates", "customization/authors"]
          },
          {
            "group": "Analytics & SEO",
            "pages": ["analytics/dashboard", "analytics/seo-optimization"]
          },
          {
            "group": "Team & Account",
            "pages": ["account/team-management", "account/settings"]
          },
          {
            "group": "Reference",
            "pages": ["reference/article-statuses", "reference/plans-and-limits", "reference/faq"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://edgeblog.ai",
          "icon": "globe",
          "color": {
            "light": "#004537",
            "dark": "#A5C2B9"
          }
        },
        {
          "anchor": "Blog",
          "href": "https://edgeblog.ai/blog",
          "icon": "newspaper",
          "color": {
            "light": "#006B54",
            "dark": "#A5C2B9"
          }
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@edgeblog.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://edgeblog.ai/app"
    }
  },
  "metadata": {
    "timestamp": true
  },
  "footer": {
    "socials": {}
  }
}
